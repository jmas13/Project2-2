<div class="field">
  <%= form_for ([current_user, @project]) do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :description %>
    <%= f.text_area :description %>
    <%= f.label :due_date %>
    <%= f.date_field :due_date %>
    <%= f.label :image %>
    <%= f.file_field :image %>
    <%= f.submit %>
  <% end %>
</div>
