<% @projects.each do |project| %>
<div class="item-view">
  <h2><%= link_to project.title, project_path(project) %></h2>
    <p><%= project.description %></p>
    <div class="image-container">
      <%= image_tag(project.image) %>
    </div>
    <%= link_to 'View',project_path(project), :class => "button" %>
  </div>
<% end %>
