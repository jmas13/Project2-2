<h2><%= @project.title %> ></h2>
<div class="field">
  <%= form_for ([current_user, @project, @task]) do |f| %>
    <%= f.label 'Task'%>
    <%= f.text_field :name %>
    <%= f.label :due_date%>
    <%= f.date_field :due_date %>
    <%= f.label :status %>
    <%= f.select(:status, ['Open', 'Closed']) %>
    <%= f.submit%>
  <% end %>
</div>
