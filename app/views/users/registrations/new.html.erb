<div class="item-view">
  <h2>Sign up</h2>
  <div class="field">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>

      <%= f.text_field :first_name, autofocus: true, placeholder: 'First Name' %>

      <%= f.text_field :last_name, autofocus: true, placeholder: 'Last Name' %>

      <%= f.text_field :image, autofocus: true, placeholder: 'Photo URL' %>

      <%= f.email_field :email, autofocus: true, placeholder: 'Email Address' %>

      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <%= f.password_field :password, autocomplete: "off", placeholder: 'Enter Password' %>

      <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password' %>

    <div class="actions">
      <%= f.submit "Sign up" %>
    </div>
  <% end %>
</div>
  <%= render "users/shared/links" %>
</div>
